
<h1>
    Edit tip:
</h1>

<form method="post" action="/quizzes/<%= quiz.id %>/tips/<%= tip.id %>?_method=PUT">

    <div class="wideRow">

        <span class="itemNarrow">New Tip:</span>

    <input type="text" class="itemWide" id="tip" name="text" value="<%= tip.text %>" placeholder="" autocomplete="off" />

    <button type="submit" class="itemNarrow">Add</button>
    </div>

</form>
